<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.rawleague.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:text="Enyimba" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="87dp"
                android:layout_gravity="center"
                android:src="@drawable/enyimbafclogo"/>

            <TextView
                android:id="@+id/team_enyimba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="25dp"
                android:paddingBottom="2dp"
                android:text="0"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:padding="8dp"
                android:onClick="addOneForEnyimba"
                android:text="Goals"
                android:textAllCaps="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:layout_marginLeft="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:onClick="addOneFoulForEnyimba"
                android:textSize="9sp"
                android:text="Yellow card"
                android:background="#fff309"
                android:textAllCaps="true"
                android:layout_marginLeft="2dp"/>

            <Button
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:onClick="addTwoFoulForEnyimba"
                android:textSize="9sp"
                android:text="update"
                android:background="#e609ff"
                android:textAllCaps="true" />

            <Button
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:onClick="addOneFoulForEnyimba"
                android:textSize="9sp"
                android:text="red card"
                android:background="#ff090d"
                android:textAllCaps="true" />

            <Button
                android:layout_width="47dp"
                android:layout_height="match_parent"
                android:onClick="addTwoFoulForEnyimba"
                android:textSize="9sp"
                android:text="Undo"
                android:background="#57ff09"
                android:textAllCaps="true" />

        </LinearLayout>


    </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_margin="20dp"
                android:text="Enugu Rangers" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/enugurangers"/>

            <TextView
                android:id="@+id/team_rangers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="12dp"
                android:paddingBottom="2dp"
                android:text="0"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:padding="8dp"
                android:onClick="addOneForRangers"
                android:text="Goals"
                android:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginLeft="80dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:onClick="addOneFoulForRangers"
                    android:textSize="9sp"
                    android:text="Yellow card"
                    android:background="#fff309"
                    android:textAllCaps="true"
                    android:layout_marginLeft="2dp"/>

                <Button
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:onClick="update"
                    android:textSize="9sp"
                    android:text="update"
                    android:background="#e609ff"
                    android:textAllCaps="true" />

                <Button
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:onClick="addTwoFoulForRangers"
                    android:textSize="9sp"
                    android:text="red card"
                    android:background="#ff090d"
                    android:textAllCaps="true" />

                <Button
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:onClick="undo"
                    android:textSize="9sp"
                    android:text="Undo"
                    android:background="#57ff09"
                    android:textAllCaps="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:onClick="reset"
        android:text="Reset" />

</RelativeLayout>